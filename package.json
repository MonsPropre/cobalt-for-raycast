{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "cobalt-for-raycast",
  "title": "Cobalt for Raycast",
  "description": "Cobalt for Raycast",
  "icon": "icon.png",
  "author": "baldy",
  "contributors": [],
  "categories": [
    "Applications",
    "Data",
    "Productivity"
  ],
  "keywords": [
    "video",
    "downloader",
    "youtube",
    "bilibili",
    "yt-dlp"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "about",
      "title": "About",
      "description": "Cobalt for Raycast",
      "mode": "view"
    },
    {
      "name": "url-to-file",
      "title": "Convert URL to File",
      "subtitle": "Cobalt for Raycast",
      "description": "Convert URL to File",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "cobaltInstance",
      "title": "Instance",
      "description": "Cobalt Instance",
      "type": "dropdown",
      "required": true,
      "data": [
        {
          "title": "Public Instance",
          "value": "public-instance"
        },
        {
          "title": "Custom",
          "value": "custom"
        }
      ]
    },
    {
      "name": "cobaltInstanceUrl",
      "title": "Cobalt Instance URL",
      "description": "Cobalt Instance URL",
      "type": "textfield",
      "required": false
    },
    {
      "name": "cobaltInstanceUseApiKey",
      "title": "Use Cobalt Instance API Key",
      "description": "Use Cobalt Instance API Key",
      "type": "checkbox",
      "required": false,
      "label": "Use"
    },
    {
      "name": "cobaltInstanceApiKey",
      "title": "Cobalt Instance API Key",
      "description": "Cobalt Instance API Key",
      "type": "password",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.93.0",
    "@raycast/utils": "^1.19.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@raycast/eslint-config": "1.0.11",
    "@types/node": "22.13.9",
    "@types/react": "^18.3.18",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.38.0"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "prepare": "npm run fix-lint",
    "lint": "ray lint",
    "pull": "ray pull-contributions",
    "publish": "ray publish"
  }
}
